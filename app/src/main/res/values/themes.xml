<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyTPU" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="IconButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Цвета по умолчанию -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/color_2</item>
        <item name="colorControlNormal">@color/grey_2</item>
        <item name="colorControlActivated">@color/color_2</item>
        <item name="colorControlHighlight">@color/color_1</item>

        <!-- Добавьте другие атрибуты по необходимости -->
    </style>
    <style name="Theme.MyTPU" parent="Base.Theme.MyTPU" />
    <style name="TimePickerStyle" parent="Theme.AppCompat.Light">
        <item name="android:timePickerMode">clock</item>
        <item name="android:numbersTextColor">?android:attr/textColorPrimary</item>
        <item name="android:numbersSelectorColor">@color/primary_color</item>
        <item name="android:numbersBackgroundColor">@android:color/transparent</item>
    </style>
</resources>