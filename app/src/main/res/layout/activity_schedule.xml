<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/root_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:clipToPadding="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Контейнер для спиннера выбора источника -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Источник:"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>

                <Spinner
                    android:id="@+id/sourceSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/source_options"/>
            </LinearLayout>

            <!-- Контейнер для ТПУ (изначально скрыт) -->
            <LinearLayout
                android:id="@+id/tpuSpinnersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <Spinner
                    android:id="@+id/schoolsSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"/>

                <Spinner
                    android:id="@+id/groupsSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Контейнер для поиска УТИ -->
            <LinearLayout
                android:id="@+id/utiSearchContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Ваша существующая карточка поиска -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/searchCard"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Внутреннее содержимое searchCard -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnSearchToggle"
                            android:layout_width="48dp"
                            android:layout_height="36dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Поиск"
                            android:src="@drawable/ic_search" />

                        <AutoCompleteTextView
                            android:id="@+id/searchField"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Поиск"
                            android:imeOptions="actionSearch"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="Расписание"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Заголовок -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_scroll_background"
            android:contentDescription="@string/app_name"
            android:fillViewport="true"

            >

            <!-- Основной контейнер расписания -->
            <LinearLayout
                android:id="@+id/scheduleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />


                    <!-- Повторить CardView для других дней -->
                </LinearLayout>

                <TextView
                    android:id="@+id/dataPrevious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/dataNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

        </ScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp">

                    <Button
                        android:id="@+id/currentDateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сегодня"
                        android:textColor="@color/textHighlight"
                        android:textStyle="bold" />

                    <!-- Этот Space заполнит всё свободное пространство между кнопкой и текстом -->

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingRight="8dp"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnAlarmSettings"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Настройка напоминаний"
                        android:src="@drawable/ic_settings" />

                    <ImageButton
                        android:id="@+id/btnSyncCalendar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_sync"
                        android:background="?attr/selectableItemBackgroundBorderless"

                        android:contentDescription="Синхронизировать с календарем"/>

                    <ImageButton
                        android:id="@+id/btnUnsyncCalendar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_sync_delite"
                        android:background="?attr/selectableItemBackgroundBorderless"

                        android:contentDescription="Синхронизировать с календарем"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/weekWheel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@drawable/border"
                    app:layoutManager="com.example.mytpu.schedule.WheelLayoutManager"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:listitem="@layout/item_week_wheel" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Внутри ScrollView или другого контейнера -->
        <TextView
            android:id="@+id/currentData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текущая дата"
            android:visibility="gone" />

        <TextView
            android:id="@+id/compactCurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата"
            android:visibility="gone" />


    </LinearLayout>

    <!-- Панель навигации по неделям -->

    <!-- Область с расписанием -->
</RelativeLayout>